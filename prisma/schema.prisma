generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum paymentMethod {
  CASH
  CARD
  UPI
  WALLET
}

enum status {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
}







model Product {
  id          Int      @id @default(autoincrement())
  name        String
  brand       String
  sku         String   @unique
  description String?
  price       Float
  stock       Int
  category    String
  taxRate     Float
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model Address {
  id        Int      @id @default(autoincrement())
  userId    Int
  name      String
  phone     String
  street    String
  city      String
  state     String
  pincode   String
  landmark  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}


model Order {
  id            Int      @id @default(autoincrement())
  orderNumber   Int      @unique
  userId        Int
  addressId     Int
  paymentMethod paymentMethod
  status        status
  totalAmount   Float
  discount      Float
  taxAmount     Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

}